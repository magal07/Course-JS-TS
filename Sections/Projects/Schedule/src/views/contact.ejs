<%- include('includes/head') %> 
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">Contact</h1>
      <p class="text-center lead">Add, delete, edit or create a new contact.</p>

      <%- include('includes/messages') %> 

      <% if(contact._id) { %>
        <form action="/contact/edit/<%= contact._id %>" method="POST">
         <% } else { %>
          <form action="/contact/register" method="POST">
          <% } %> 
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"> 

        <div class="form-group">
          <label>Name</label>
          <input value="<%= contact.name %>" type="text" class="form-control" name="name">
        </div>

        <div class="form-group">
          <label>Surname</label>
          <input value="<%= contact.surname %>" type="text" class="form-control" name="surname">
        </div>

        <div class="form-group">
          <label>Email</label>
          <input value="<%= contact.email %>" type="email" class="form-control" name="email">
        </div>

        <div class="form-group">
          <label>Telephone</label>
          <input value="<%= contact.telephone %>" type="tel" class="form-control" name="telephone">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>